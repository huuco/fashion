<div id="myCarousel" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
  <% i = 1 %>
  <% @slides.each do |slide| %>
    <div class="item <%= "active" if i == 1 %>">
      <%= link_to image_tag(slide.image.url), slide.link %>
      <div class="carousel-caption">
        <h3><%= slide.title %></h3>
      </div>
    </div>
    <% i += 1 %>
  <% end %>
  </div>
  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only"><% t ".prev" %></span>
  </a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="sr-only"><% t ".next" %></span>
  </a>
</div>
<div class="container">
  <div id="content" class="space-top-none">
    <div class="main-content">
      <div class="row">
        <div class="col-sm-12">
          <div class="beta-products-list">
            <h4><%= t "products.new_product" %></h4>
            <div class="row">
              <%= render partial: "index", collection: @new_product, as: :product %>
            </div>
            <div class="col-sm-12">
              <%= paginate @new_product %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
