<div class="inner-header">
  <div class="container">
    <div class="pull-left">
      <h6 class="inner-title"><%= t ".title" %></h6>
    </div>
    <div class="pull-right">
      <div class="beta-breadcrumb font-large">
        <%= link_to t(".home"), root_path %> /
        <span><%= t ".title" %></span>
      </div>
    </div>
    <div class="clearfix"></div>
  </div>
</div>
<div class="container">
  <div id="content">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr align="center">
          <th><%= t ".transaction_id" %></th>
          <th><%= t ".total" %></th>
          <th><%= t ".status" %></th>
          <th><%= t ".detail" %></th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr class="odd gradeX">
            <td><%= order.transaction_id %></td>
            <td><%= currency order.total %></td>
            <td><%= order.status %></td>
            <td class="center">
              <i class="fa fa-eye"></i>
              <%= link_to t(".detail"), orders_history_path(order) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @orders %>
  </div>
</div>
