<tr class="odd gradeX center">
  <td><%= index_for_list @slides, slide_counter %></td>
  <td><%= slide.title %></td>
  <td class="center">
    <i class="fa fa-pencil fa-fw"></i>
    <%= link_to t("admin.edit"), edit_admin_slide_path(slide) %>
  </td>
  <td class="center">
    <i class="fa fa-trash-o fa-fw"></i>
    <%= link_to t("admin.delete"), admin_slide_path(slide),
      method: :delete, data: {confirm: t("admin.you_sure")} %>
  </td>
</tr>
