<div id="page-wrapper" >
  <div class="container-fluid">
    <div class="row padding-top-50">
      <%= form_for :datechart, url: admin_url do |f| %>
        <div class="form-group col-lg-3">
          <%= f.label :from_date, t(".from" )%>
          <%= f.date_field :from_date, placeholder: Date.today.to_s, class: "form-control" %>
        </div>
        <div class="form-group col-lg-3">
          <%= f.label :to_date, t("to:") %>
          <%= f.date_field :to_date, placeholder: Date.today.to_s, class: "form-control" %>
        </div>
        <div class="form-group col-lg-3 btn-submit-chart">
          <%= f.submit t(".submit"), class: "btn btn-primary btn-submit" %>
        </div>
      <% end %>
    </div>
    <div class="row">
      <%= line_chart @chart_data, prefix: "$", height: "400px",
        width: "850px", min: 1, legend: "bottom", colors: ["#0000cc", "#0000cc"] %>
    </div>
  </div>
</div>
