<% provide :title, t(".brand") %>
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header"><%= t ".brand" %>
          <small><%= t ".list" %></small>
        </h1>
      </div>
      <div class="action_btn row col-lg-12">
        <%= form_tag admin_brands_path, method: :get,
          class: "navbar-form navbar-right" do %>
          <%= text_field_tag :search, params[:search], class: "form-control",
            placeholder: t("admin.brands.index.search_an_brand"),
              "data-toggle": "dropdown", require: true %>
          <%= button_tag type: :submit, class: "btn btn-default" do %>
            <i class ="fa fa-search"></i>
          <% end %>
        <% end %>
      </div>
      <div class="action_btn row col-lg-12">
        <%= link_to t(".add_new"), new_admin_brand_url,
          class: "btn btn-default" %>
      </div>
      <table class="table table-striped table-bordered table-hover"
         id="dataTables-example">
        <thead>
          <tr align="center">
            <th><%= t ".stt" %></th>
            <th><%= t ".name" %></th>
            <th><%= t ".product_count" %></th>
            <th><%= t ".edit" %></th>
            <th><%= t ".delete" %></th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: "brand", collection: @brands, as: :brand %>
        </tbody>
      </table>
      <%= paginate @brands %>
    </div>
  </div>
</div>
