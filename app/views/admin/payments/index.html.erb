<% provide :title, t("payment") %>
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header"><%= t ".payment" %>
          <small><%= t ".list" %></small>
        </h1>
      </div>
      <div class="action_btn row col-lg-12">
        <%= link_to t(".add_new"), new_admin_payment_url,
          class: "btn btn-default" %>
      </div>
      <table class="table table-striped table-bordered table-hover"
         id="dataTables-example">
        <thead>
          <tr align="center">
            <th><%= t "admin.stt" %></th>
            <th><%= t "admin.name" %></th>
            <th><%= t "admin.description" %></th>
            <th><%= t "admin.edit" %></th>
            <th><%= t "admin.delete" %></th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: "payment", collection: @payments, as: :payment  %>
        </tbody>
      </table>
        <%= paginate @payments %>
    </div>
  </div>
</div>
