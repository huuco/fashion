<% provide :title, t("admin.list") %>
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header"><%= t "admin.category" %>
          <small><%= t "admin.list" %></small>
        </h1>
      </div>
        <div class="action_btn row col-lg-12">
        <%= form_tag admin_categories_path, method: :get, class: "navbar-form navbar-right" do %>
          <%= text_field_tag :search, params[:search], class: "form-control",
            placeholder: t("admin.brands.index.search_an_category") , require: true %>
          <%= button_tag type: :submit,class: "btn btn-default" do %>
            <i class ="fa fa-search"></i>
          <% end %>
        <% end %>
      </div>
      <div class="action_btn row col-lg-12">
        <%= link_to t(".add_new"), new_admin_category_url,
          class: "btn btn-default" %>
      </div>
      <table class="table table-striped table-bordered table-hover"
         id="dataTables-example">
        <thead>
          <tr align="center">
            <th><%= t ".stt" %></th>
            <th><%= t ".name" %></th>
            <th><%= t ".parent_id" %></th>
            <th><%= t ".active" %></th>
            <th><%= t "admin.edit" %></th>
            <th><%= t "admin.delete" %></th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: "category", collection: @categories, as: :category %>
        </tbody>
      </table>
      <%= paginate @categories %>
    </div>
  </div>
</div>
