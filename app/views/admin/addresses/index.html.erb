<% provide :title, t(".title") %>
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header"><%= t ".title" %>
          <small><%= t ".list" %></small>
        </h1>
      </div>
      <div class="action_btn row col-lg-12">
        <%= link_to t(".add_new"), new_admin_address_url,
          class: "btn btn-default" %>
      </div>
      <table class="table table-striped table-bordered table-hover"
         id="dataTables-example">
        <thead>
          <tr align="center">
            <th><%= t ".id" %></th>
            <th><%= t ".alias" %></th>
            <th><%= t ".full_name" %></th>
            <th><%= t ".edit" %></th>
            <th><%= t ".delete" %></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
          <tr class="odd gradeX" align="center">
            <td><%= address.id %></td>
            <td><%= address.alias %></td>
            <td><%= address.full_name %></td>
            <td class="center">
              <i class="fa fa-pencil fa-fw"></i>
              <%= link_to t(".edit"), edit_admin_address_path(address) %>
            </td>
            <td class="center">
              <i class="fa fa-trash-o  fa-fw"></i>
              <%= link_to t(".delete"), admin_address_path(address),
                method: :delete, data: {confirm: t(".you_sure")} %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @addresses %>
    </div>
  </div>
</div>
