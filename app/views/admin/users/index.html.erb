<% provide :title, t("user") %>
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header"><%= t "admin.user" %>
          <small><%= t "admin.list" %></small>
        </h1>
      </div>
       <div class="action_btn row col-lg-12">
        <%= form_tag admin_users_path, method: :get,
          class: "navbar-form navbar-right" do %>
          <%= text_field_tag :search, params[:search], class: "form-control",
            placeholder: t("admin.users.index.search_an_user"),
            "data-toggle": "dropdown", require: true %>
          <%= submit_tag t(".submit"), class: "btn btn-primary" %>
        <% end %>
      </div>
       <div class="action_btn row col-lg-12">
        <%= link_to t(".add_new"), new_admin_user_url,
        class: "btn btn-primary" %>
      </div>
      <table class="table table-striped table-bordered table-hover"
        id="dataTables-example">
        <thead>
          <tr align="center">
            <th><%= t ".stt" %></th>
            <th><%= t ".name" %></th>
            <th><%= t ".full_name" %></th>
            <th><%= t ".email" %></th>
            <th><%= t ".role" %></th>
            <th><%= t ".actived" %></th>
            <th><%= t "admin.edit" %></th>
            <th><%= t "admin.delete" %></th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: "user", collection: @users, as: :user %>
        </tbody>
      </table>
      <%= paginate @users %>
    </div>
  </div>
</div>
